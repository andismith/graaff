  Facebook META data
--}}
    <meta property="og:site_name" content="{{siteData.title}}" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{#if summary}}{{ summary }}{{else}}{{ siteData.meta.description }}{{/if}}" />
{{#if this.page.data.shareImage}}
    <meta property="og:image" content="{{ siteData.url }}/{{ getResource this.page.data.shareImage }}" />
{{else}}
    <meta property="og:image" content="{{siteData.url}}/themes/{{ siteData.settings.theme }}/assets/img/share.png" />
{{/if}}
